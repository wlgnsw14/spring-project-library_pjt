<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.goodee.library.memberMapper">
	
	<!-- 1. 조건은 m_id 일치 여부 -->
	<!-- 2. 개수를 조회 -->
	<select id="idDoubleCheck" parameterType="String" resultType="int">
		SELECT COUNT(m_id) FROM tbl_member
		<where>
			m_id = #{m_id}
		</where>
	</select>
	
	<insert id="createMember" parameterType="com.goodee.library.member.dto.MemberDto">
		INSERT INTO tbl_member (m_id, m_pw, m_name, m_mail, m_reg_date)
			VALUES(#{m_id}, #{m_pw}, #{m_name}, #{m_mail}, NOW())
	</insert>
	
	<select id="selectMemberOne" parameterType="String" resultType="com.goodee.library.member.dto.MemberDto">
		SELECT * FROM tbl_member
		<where>
			m_id = #{m_id}
		</where>
	</select>
	
	<select id="selectMemberAll" parameterType="String" resultType="com.goodee.library.member.dto.MemberDto">
		SELECT * FROM tbl_member
	</select>
	
	<update id="updateMember" parameterType="com.goodee.library.member.dto.MemberDto">
		UPDATE tbl_member SET m_name = #{m_name}, m_mail = #{m_mail}
		<where>
			m_no = #{m_no}
		</where>
	</update>
	
	<select id="updatedMemberSelect" parameterType="int" resultType="com.goodee.library.member.dto.MemberDto">
		SELECT * FROM tbl_member
		<where>
			m_no = #{m_no}
		</where>
	</select>
	
	
</mapper>
